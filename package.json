{
  "name": "lovue",
  "version": "2.2.4",
  "description": "Love Vue: UI components for Vue",
  "main": "dist/lovue.common.js",
  "module": "dist/lovue.esm.js",
  "unpkg": "dist/lovue.min.js",
  "jsdelivr": "dist/lovue.min.js",
  "repository": {
    "url": "https://github.com/loliconer/lovue.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/loliconer/lovue/issues"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "serve": "rollup -c --watch",
    "serveExtension": "rollup -c rollup.extension.config.js --watch",
    "normalize": "lessc src/less/normalize.less dist/normalize.min.css --clean-css",
    "less": "lessc src/less/lovue.less dist/lovue.min.css --clean-css",
    "cjs": "rollup -c --environment production,cjs",
    "esm": "rollup -c --environment production,esm",
    "js": "rollup -c --environment production",
    "min": "terser dist/lovue.js -o dist/lovue.min.js -c",
    "build": "npm run less && npm run normalize && npm run cjs && npm run esm && npm run js && npm run min",
    "lessExtension": "lessc src/less/lovue.extension.less dist/lovue.extension.min.css --clean-css",
    "cjsExtension": "rollup -c rollup.extension.config.js --environment production,cjs",
    "esmExtension": "rollup -c rollup.extension.config.js --environment production,esm",
    "jsExtension": "rollup -c rollup.extension.config.js --environment production",
    "minExtension": "terser dist/lovue.extension.js -o dist/lovue.extension.min.js -c",
    "buildExtension": "npm run lessExtension && npm run cjsExtension && npm run esmExtension && npm run jsExtension && npm run minExtension",
    "cjsUtils": "rollup src/utils.js --o dist/utils.common.js --f cjs --no-strict",
    "esmUtils": "rollup src/utils.js --o dist/utils.esm.js --f esm --no-strict",
    "jsUtils": "rollup src/utils.js --o dist/utils.js --f iife -n utils --no-strict",
    "buildUtils": "npm run cjsUtils && npm run esmUtils && npm run jsUtils"
  },
  "author": "loliconer",
  "license": "Apache-2.0",
  "devDependencies": {
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "less-plugin-clean-css": "^1.5.1",
    "qrcode.vue": "^1.6.1",
    "rollup": "^0.66.6",
    "rollup-plugin-less": "^0.1.5",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-serve": "^0.6.0",
    "rollup-plugin-vue": "^4.3.2",
    "terser": "^3.10.11",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
